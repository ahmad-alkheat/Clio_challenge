<h1>Listing teams</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.title %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'join team', join_team_path(team), :method => :post unless current_user.team_id == team.id %></td>
    <td><%= link_to 'unjoin team', unjoin_team_path(team), :method => :post if current_user.team_id == team.id %></td>



  </tr>
<% end %>
</table>

